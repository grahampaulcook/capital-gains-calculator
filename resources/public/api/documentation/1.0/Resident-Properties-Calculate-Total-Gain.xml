<endpoint>
    <name>Resident Properties Calculate Total Gain</name>
    <description>Calculates the total gain of a property for a resident.</description>
    <section id="resource">
        <title>Resource</title>
        <resource>GET /capital-gains-calculator/calculate-total-gain?disposalValue={disposalValue}&amp;disposalCosts={disposalCosts}&amp;acquisitionValue={acquisitionValue}&amp;acquisitionCosts={acquisitionCosts}&amp;improvements={improvements}</resource>
    </section>
